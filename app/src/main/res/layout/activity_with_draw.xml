<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.prashant.android.flipv2.WithDraw">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="With Draw"
        android:id="@+id/twd"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Direct to bank"
        android:id="@+id/toBank"
        android:layout_below="@+id/paid"
        android:layout_alignLeft="@+id/Heading"
        android:layout_alignParentStart="true"
        android:layout_marginTop="107dp"
        android:onClick="diverting"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Mobile Recharge"
        android:id="@+id/toRecharge"
        android:layout_below="@+id/toBank"
        android:layout_alignLeft="@+id/Heading"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:onClick="diverting"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flipkart Voucher"
        android:id="@+id/flipVoucher"
        android:layout_below="@+id/toRecharge"
        android:layout_marginLeft="20dp"
        android:layout_alignLeft="@+id/Heading"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:onClick="diverting"/>
</RelativeLayout>
